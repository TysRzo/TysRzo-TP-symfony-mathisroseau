{% extends 'base.html.twig' %}

{% block title %}Créer un livre{% endblock %}

{% block body %}
    <h1>Créer un livre</h1>

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.author) }}
    {{ form_row(form.description) }}
    {{ form_row(form.genre) }}
    {{ form_row(form.coverImage) }}
    <button class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}
{% endblock %}
